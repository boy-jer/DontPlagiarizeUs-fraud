<div style="">
  <%= render :partial => "new" %>
</div>
<div style="float: right;">
  <%= will_paginate %>
</div>
<table id="brews_table">
<thead>
  <tr>
    <th>Twitter User</th>
    <th>Tweets Examined</th>
    <th>Directly Plagiarized</th>
    <th>Possibly Plagiarized</th>
  </tr>
</thead>
<tbody>  
<% @detections.each do |detection| %>
  <tr onclick="javascript:location.href='<%= profile_path(detection) %>';">
    <td align="center">
      @<%=h detection.screen_name %>
    </td>
    <td align="center">
      <%= detection.tweets.plagiarism_of_null.size %>
    </td>
    <td align="center">
      <%= detection.tweets.plagiarism_verbatim_eq(true).size %>
    </td>
    <td align="center">
      <%= detection.tweets.plagiarism_of_not_null.plagiarism_verbatim_eq(false).size %>
    </td>
  </tr>
<% end %>
</tbody>
</table>
